{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    },
    "import/extensions": [
        "error",
        "ignorePackages",
        {
            "js": "never",
            "mjs": "never",
            "jsx": "never",
            "scss": "never"
        }
    ]
}