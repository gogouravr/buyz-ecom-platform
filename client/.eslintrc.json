{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "react/jsx-indent": "off",
        "react/jsx-indent-props": "off",
        "indent": "off",
        "import/no-extraneous-dependencies": "off",
        "comma-dangle": "off"
    }
}